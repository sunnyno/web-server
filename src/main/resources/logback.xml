<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <layout>
      <Pattern>
        %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
      </Pattern>
    </layout>       
  </appender>
  
  <root level="INFO,DEBUG">
    <appender-ref ref="CONSOLE"/>
  </root>  
</configuration>